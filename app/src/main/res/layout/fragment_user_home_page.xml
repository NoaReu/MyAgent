<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/HomePageFrameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".userPages.UserHomePageFragment" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:src="@drawable/my_agent_logo_no_background_img" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_gravity="right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/WelcomeUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text=" ישראל ישראלי"
                android:textColor="#036A64"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Welcome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" שלום"
                android:textColor="#036A64"
                android:textSize="20dp"
                android:textStyle="bold" />

        </LinearLayout>

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="100dp">

            <TableRow
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp">

                <Button
                    android:id="@+id/userPrevReqUSERHOMEPAGE"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:backgroundTint="@color/BTN_background_dark"
                    android:text="צפייה\n בבקשות"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    app:strokeColor="#B3B3B3"
                    app:strokeWidth="1dp" />

                <Button
                    android:id="@+id/docPrevReqUSERHOMEPAGE"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:backgroundTint="@color/BTN_background_dark"
                    android:text="מסמכים\n קיימים"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    app:strokeColor="#B3B3B3"
                    app:strokeWidth="1dp" />
            </TableRow>
            <TableRow
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp">

                <Button
                    android:id="@+id/newSuitUSERHOMEPAGE"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:backgroundTint="@color/BTN_background_dark"
                    android:text="תביעה\n חדשה"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    app:strokeColor="#B3B3B3"
                    app:strokeWidth="1dp" />

                <Button
                    android:id="@+id/insuranceNewCaseUSERHOMEPAGE"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:backgroundTint="@color/BTN_background_dark"
                    android:text="ביטוח\n חדש"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    app:strokeColor="#B3B3B3"
                    app:strokeWidth="1dp" />
            </TableRow>
        </TableLayout>
    </LinearLayout>
</FrameLayout>