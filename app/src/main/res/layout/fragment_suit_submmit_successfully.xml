<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/suit_submit_successfully_frameLayout"
    tools:context=".userPages.suitPages.SuitSubmitSuccessfully">
    <LinearLayout
        android:id="@+id/suit_submit_successfully_first_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/suit_submit_successfully_second_layout"
            android:layout_width="match_parent"
            android:layout_height="419dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="344dp"
                android:layout_gravity="center"
                android:contentDescription="@string/app_logo_picture"
                android:src="@drawable/my_agent_logo_no_background_img" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/suit_submit_successfully_third_layout"
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/the_suit_submit_successfully_text"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:gravity="center"
                android:text="התביעה הוגשה בהצלחה"
                android:textColor="#036A64"
                android:textSize="34sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/suit_submit_successfully_fifth_layout"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/please_return_to_the_main_page_text"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:gravity="center"
                android:text="אנא חזור למסך הראשי"
                android:textColor="#036A64"
                android:textSize="24sp"
                android:textStyle="bold" />

        </LinearLayout>


    </LinearLayout>
</FrameLayout>