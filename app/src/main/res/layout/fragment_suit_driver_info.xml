<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/suit_driver_info_first_layout"
    tools:context=".userPages.suitPages.SuitDriverInfo">


    <LinearLayout
        android:id="@+id/suit_driver_info_second_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="5"
        >
        <ImageView

            android:id="@+id/imageView3j"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:contentDescription="@string/app_logo_picture"
            android:src="@drawable/my_agent_logo_no_background_img"
            tools:ignore="NestedWeights" />
        <TextView
            android:id="@+id/header_home_page_user"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.8"
            android:backgroundTint="@color/white"
            android:fontFamily="Ariel"
            android:gravity="center"
            android:text="פרטי הנהג"
            android:textColor="@color/teal_700"
            android:textSize="40sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/suit_driver_info_third_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            >
            <LinearLayout
                android:id="@+id/suit_driver_info_fourth_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="1"
                android:orientation="horizontal">

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp">

                    <TableRow
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp">

                    <LinearLayout
                        android:id="@+id/full_name_suit_driver_info_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/full_name_suit_driver_info_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="שם מלא"
                            android:textSize="20sp"
                            android:textColor="@color/black"
                            android:textStyle="bold"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginRight="270dp"
                            android:layout_weight="0.1"
                            android:src="@drawable/ic_person" />
                    </LinearLayout>
                    </TableRow>
                    <TableRow
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp">


                            <EditText
                                android:id="@+id/full_name_suit_driver_info_edit_text"
                                android:layout_width="match_parent"
                                android:layout_height="48dp"
                                android:layout_weight="0.6"
                                android:autofillHints=""
                                android:ems="10"
                                android:inputType="text"
                                android:background="@drawable/edit_text_background"
                                tools:ignore="SpeakableTextPresentCheck" />


                    </TableRow>
                    <TableRow
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp">
                    <LinearLayout
                        android:id="@+id/year_of_birth_suit_driver_info_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/year_of_birth_suit_driver_info_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="שנת לידה"
                            android:textStyle="bold"
                            android:textSize="20sp"
                            android:textColor="@color/black" />
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginRight="270dp"
                            android:layout_weight="0.1"
                            android:src="@drawable/ic_years" />
                    </LinearLayout>
        </TableRow>
                    <TableRow
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp">

                        <EditText
                            android:id="@+id/year_of_birth_suit_driver_info_edit_text"

                            android:layout_weight="0.6"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:autofillHints=""
                            android:ellipsize="end"
                            android:inputType="number"
                            android:maxLines="1"
                            android:background="@drawable/edit_text_background"
                            tools:ignore="SpeakableTextPresentCheck" />


                    </TableRow>
                    <TableRow
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp">
                    <LinearLayout
                        android:id="@+id/id_number_suit_driver_info_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/id_number_suit_driver_info_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/id_customer_info_at_agent"
                            android:textStyle="bold"
                            android:textSize="20sp"
                            android:textColor="@color/black" />
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="0.2"
                            android:layout_marginRight="240dp"
                            android:src="@drawable/ic_identity"/>
                    </LinearLayout>
        </TableRow>
                    <TableRow
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp">

                        <EditText
                            android:id="@+id/id_number_suit_driver_info_edit_text"

                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:layout_weight="0.6"
                            android:background="@drawable/edit_text_background"
                            android:inputType="number" />


                    </TableRow>
                    <TableRow
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp">
                    <LinearLayout
                        android:id="@+id/address_suit_driver_info_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/address_suit_driver_info_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/address_customer_info_at_agent"
                            android:textStyle="bold"
                            android:textSize="20sp"
                            android:textColor="@color/black" />
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginRight="130dp"
                            android:layout_weight="0.2"
                            android:src="@drawable/ic_address"/>
                    </LinearLayout>
        </TableRow>
                    <TableRow
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp">

                            <EditText
                                android:id="@+id/address_suit_driver_info_edit_text"

                                android:layout_width="match_parent"
                                android:layout_height="48dp"
                                android:layout_weight="0.6"
                                android:background="@drawable/edit_text_background"
                                android:inputType="text" />

                    </TableRow>
                    <TableRow
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp">
                    <LinearLayout
                        android:id="@+id/family_closeness_suit_driver_info_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/family_closeness_suit_driver_info_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textStyle="bold"
                            android:text="קרבה למבוטח"
                            android:textSize="20sp"
                            android:textColor="@color/black" />
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginRight="130dp"
                            android:layout_weight="0.2"
                            android:src="@drawable/ic_lastname"/>
                    </LinearLayout>
                    </TableRow>
                    <TableRow
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp">

                        <EditText
                            android:id="@+id/family_closeness_suit_driver_info_edit_text"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:layout_weight="0.6"
                            android:background="@drawable/edit_text_background"
                            android:inputType="text" />

                    </TableRow>
                    <TableRow
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp">
                    <LinearLayout
                        android:id="@+id/drivers_license_number_suit_driver_info_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/drivers_license_number_suit_driver_info_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="מספר רשיון נהיגה"
                            android:textStyle="bold"
                            android:textSize="20sp"
                            android:textColor="@color/black" />
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginRight="130dp"
                            android:layout_weight="0.2"
                            android:src="@drawable/ic_numbers"/>
                    </LinearLayout>
        </TableRow>
                    <TableRow
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp">

                        <EditText
                            android:id="@+id/drivers_license_number_suit_driver_info_edit_text"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:layout_weight="0.6"
                            android:inputType="number"
                            android:background="@drawable/edit_text_background"
                            tools:ignore="SpeakableTextPresentCheck" />

                    </TableRow>
                    <TableRow
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp">
                    <LinearLayout
                        android:id="@+id/year_of_issuance_of_drivers_license_suit_driver_info_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/year_of_issuance_of_drivers_license_suit_driver_info_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="שנת הוצאת רישיון נהיגה"
                            android:textStyle="bold"
                            android:textSize="20sp"
                            android:textColor="@color/black"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginRight="130dp"
                            android:layout_weight="0.2"
                            android:src="@drawable/ic_outline_year"/>
                    </LinearLayout>
        </TableRow>
                    <TableRow
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp">

                        <EditText
                            android:id="@+id/year_of_issuance_of_drivers_license_suit_driver_info_edit_text"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:layout_weight="0.6"
                            android:inputType="number"
                            android:background="@drawable/edit_text_background"
                            tools:ignore="SpeakableTextPresentCheck" />

                    </TableRow>
                    <Button
                        android:id="@+id/submit_suit_btn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="25dp"
                        android:background="@drawable/button_design"
                        android:backgroundTint="@color/BTN_background_dark"
                        android:gravity="center"
                        android:text="הגש תביעה"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                </TableLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
    </LinearLayout>