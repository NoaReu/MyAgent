<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayoutLoginUser"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".agentPages.HomePageAgentFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:src="@drawable/my_agent_logo_no_background_img" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_gravity="right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/Welcome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="שלום"
                android:textColor="#036A64"
                android:textSize="25dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/WelcomeAgentName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" סוכן"
                android:textColor="#036A64"
                android:textSize="25dp"
                android:textStyle="bold" />

        </LinearLayout>

        <TableLayout
            android:layout_width="359dp"
            android:layout_height="287dp"
            android:layout_gravity="center"
            android:layout_marginTop="100dp">

            <TableRow
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp">

                <Button
                    android:id="@+id/searchUser_HOME_PAGE_AGENT"
                    android:layout_width="328dp"
                    android:layout_height="49dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/button_design"

                    android:backgroundTint="@color/BTN_background_dark"
                    android:gravity="center"
                    android:text="חיפוש לקוח"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    app:strokeColor="#B3B3B3" />
            </TableRow>

            <TableRow
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp">

                <Button
                    android:id="@+id/createUser_HOME_PAGE_AGENT"
                    android:layout_width="wrap_content"
                    android:layout_height="49dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/button_design"
                    android:backgroundTint="@color/BTN_background_dark"
                    android:gravity="center"
                    android:text="יצירת לקוח"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    app:strokeColor="#B3B3B3" />
            </TableRow>

            <TableRow
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp">

                <Button
                    android:id="@+id/Suits_HOME_PAGE_AGENT"
                    android:layout_width="wrap_content"
                    android:layout_height="49dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/button_design"
                    android:backgroundTint="@color/BTN_background_dark"
                    android:gravity="center"
                    android:text="תביעות"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    app:strokeColor="#B3B3B3" />


            </TableRow>
            <TableRow
                android:layout_marginLeft="10dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="10dp">

                <Button
                    android:id="@+id/BTN_logoutAgentHomePage"
                    android:layout_width="wrap_content"
                    android:layout_height="49dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/logoutbutton_desing"
                    android:text="התנתק"
                    android:gravity="center"
                    android:textColor="#036A64"
                    android:textSize="16dp"
                    android:textStyle="bold"
                     />


            </TableRow>
        </TableLayout>
    </LinearLayout>

