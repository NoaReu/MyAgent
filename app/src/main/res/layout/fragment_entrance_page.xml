<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/EntrancePageFrameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EntrancePageFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/myAgentLogoLogin"
            android:layout_width="wrap_content"
            android:layout_height="300dp"
            android:src="@drawable/my_agent_logo_no_background_img" />

        <Button
            android:id="@+id/RegistrationBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingLeft="110dp"
            android:paddingRight="110dp"
            android:layout_marginTop="50dp"
            android:textSize="24dp"
            android:textStyle="bold"
            android:backgroundTint="#29ADB6"
            android:text="הרשמה" />

        <Button
            android:id="@+id/ConnectionBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="100dp"
            android:textSize="24dp"
            android:paddingRight="100dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:backgroundTint="#29ADB6"
            android:text="התחברות" />

        <Button
            android:id="@+id/forgotMyPassBtnEntrancePage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:backgroundTint="#ffff"
            android:layout_marginTop="40dp"
            android:paddingLeft="50dp"
            android:textSize="14dp"
            android:textColor="#29ADB6"
            android:paddingRight="50dp"
            android:text="שכחתי סיסמה?" />
    </LinearLayout>

</FrameLayout>



